---
title: "Kontakt"
layout: "layouts/content.njk"
permalink: /kontakt/
---
{% set fields = ctfl.pageKontakt.fields %}

<div class="section">
  <div class="wrapper | stack-3xl-4xl">
    <div class="gradient-line-vertical">
      <h1 class="text-step-5 color-white cxt uppercase center-text leading-flat">Kontakt</h1>
    </div>
    <div class="section__intro | center-text text-step-1">
      {{ fields.intro | renderRichTextAsHtml | safe  }}
    </div>

    <!-- CHANGE COLUMNS LARGE TO 2 AS SOON AS NEXT CONTACT PERSON APPEARS -->
    <div class="grid-switcher" style="
            --gs-columns-small: 1;
            --gs-bp-medium: 50rem;
            --gs-columns-large: 1;
            --gs-gap: 0.5rem;
            --gs-gap: var(--space-xl);
        ">
      <!-- REMOVE INLINE STYLES AS SOON AS NEXT CONTACT PERSON APPEARS -->
      {% for person in fields.contactPerson %}

        <div class="contact-person stack-m" style="max-width: 40rem; margin-inline: auto;">
          <img alt="" src="{{ person.fields.image.fields.file.url }}" style="
                  width: 100%;
                  height: auto;
              ">
          <div class="content stack-2xs">
            <h3 class="text-step-2 weight-bold">
              {{ person.fields.name }}
            </h3>
            <div class="text-step-0 | stack-m">
              {{ person.fields.content | renderRichTextAsHtml | safe  }}
            </div>
          </div>
          <a class="button" href="mailto:{{ site.authorEmail }}">{{ site.authorEmail }}</a>
          <a href=" {{ person.fields.linkedin }} " target="blank" class="button" style="text-transform: none;">LinkedIn</a>
        </div>

      {% endfor %}
    </div>
  </div>
</div>

<script defer="defer" src="/js/book-flip.js"></script>