{% set assetHash = global.random() %}
<!DOCTYPE html>
<html lang="de" class="no-js">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    {% include "partials/meta-info.html" %}

    <script>
      document.documentElement.classList.remove("no-js");
      document.documentElement.classList.add("js-active");
    </script>

    <link rel="stylesheet" media="all" href="/fonts/fonts.css?{{ assetHash }}" />

    {% if env.nodeenv !== 'production' %}
      <!-- We're not in production mode -->
      <style>
        {% include "css/critical.css" %}
      </style>
    {% endif %}
    <style>
      #canvas-container {
        height: 100vh;
        height: 100dvh;
        width: 100%;
        position: fixed;
        left: 0;
        top: 0;
        z-index: -999;
      }

      #canvas {
        display: block;
        background-color: var(--color-black);
      }
    </style>
  </head>

  <body>
    <div id="canvas-container" class="stars">
      <canvas id="canvas"></canvas>
    </div>
    {% include "partials/site-head.html" %}

    <main tabindex="-1" id="main-content">
      {% block content %}{% endblock %}
    </main>

    {% include "partials/site-foot.html" %}

    <script src="/js/gsap.min.js"></script>
    <script src="/js/ScrollTrigger.min.js"></script>
    <script src="/js/stars.js"></script>
    <script src="/js/nav.js"></script>
    <script>
      gsap.registerPlugin(ScrollTrigger);
      gsap.set(".stars", {
        opacity: 0.6
      })

      gsap.to(".stars", {
        scrollTrigger: {
          trigger: "body",
          start: "top top",
          end: "top -75%",
          toggleActions: "restart pause reverse pause",
          scrub: true
        },
        opacity: 0.3,
      });
    </script>
    <script src="/js/details-utils.min.js"></script>

  </body>
</html>
