      <h1 class="text-center text-white text-step-2 weight-light">
        <span class="sr-only">Digital x Medicine</span>
        David Matusiewicz
      </h1>
    </div>
  </div>

  <div class="main-visual">
    <img class="main-visual__img" src="/assets/images/portrait_visual.png" alt="">
    <div class="main-visual__text | stack-s">
      <p class="uppercase text-step-2 weight-bold leading-flat">Prof. Dr. </p>
      <h2 class="uppercase text-step-5 leading-flat">David Matusiewicz</h2>
      <p class="text-step-0 spaced-out opaque">{{ fields.intro }}</p>
      <a href="/kontakt/" class="button">Jetzt Buchen</a>
    </div>
  </div>

  <section class="vita | stack-2xl">
    <div class="vita__intro | wrapper">
      <h2 class="uppercase text-step-5 leading-flat">vita</h2>
      <div class="gradient-line"></div>
      <div class="stack-m text-step-0">
        {{ fields.vitaText | renderRichTextAsHtml | safe }}
      </div>
    </div>
    <div class="bg-blue-700">
      <div class="vita__table | wrapper" style="--wrapper-max: 100rem">
        {% for section in fields.vitaSections %}
          {% if section.fields.vitaSection %}
            <div class="vita__table-item">
              <h3 class="text-step-2 leading-flat">{{ section.fields.sectionTitle }}</h3>
              <dl class="text-step-0">

                {% for sectionItem in section.fields.vitaSection %}

                  <div>
                    {% if sectionItem.fields.periodStart %}
                      <dt class="text-step-1">{{ sectionItem.fields.periodStart | readableDate({month: "numeric", year: "numeric"}) }}
                        {% if sectionItem.fields.periodEnd %}
                       - {{ sectionItem.fields.periodEnd | readableDate({month: "numeric", year: "numeric"}) }}</dt>
                      {% endif %}

                    {% elif not sectionItem.fields.periodStart %}

                      <dt class="text-step-1">{{ sectionItem.fields.title }}</dt>

                    {% endif %}
                    <dd>{{ sectionItem.fields.description }}</dd>
                  </div>

                {% endfor %}

              </dl>
            </div>

          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="wrapper" style="--wrapper-max: 70rem;">
      <div class="grid-switcher" style="
            --gs-columns-medium: 1;
            --gs-columns-large: 1;
            --gs-bp-medium: 39rem;
            --gs-gap: var(--space-l);
            ">
        <a href="/presse/" class="icon-link">
          <span class="icon-link__icon">
            {% icon icon = "presse" %}
          </span>
          <span class="icon-link__text | text-center text-step-1">Presse</span>
        </a>
      </div>
    </div>
  </section>
</div>