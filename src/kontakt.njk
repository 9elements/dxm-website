    <div class="contact-info | center-text">
      <p class="text-step-1 uppercase stack-m">
              DXM Group GmbH<br>
              c/o BRYCK GmbH & Co. KG<br>
              Jakob-Funke-Platz 2<br>
              45127 Essen<br>
        <a class="button" href="mailto:{{ site.authorEmail }}">{{ site.authorEmail }}</a>
      </p>
    </div>
  </div>
</div>

